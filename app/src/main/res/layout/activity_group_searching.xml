<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff3b1">

    <EditText
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputgname"
            android:hint="검색어를 입력하세요" android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"
            android:layout_marginTop="56dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_search" android:layout_marginEnd="12dp"
    />
    <TextView
            android:text="그룹 가입"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" android:textStyle="bold"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="141dp" android:layout_marginBottom="59dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_search"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:id="@+id/search_res" android:textAlignment="center"
            android:textStyle="bold" android:textSize="24sp" android:gravity="center"
            android:layout_marginBottom="118dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" android:layout_marginEnd="56dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="414dp" app:layout_constraintBottom_toTopOf="@+id/button3"
            android:background="#f1eb9a"/>
    <ImageButton
            android:layout_width="65dp"
            android:layout_height="0dp" app:srcCompat="@android:drawable/arrow_down_float"
            android:id="@+id/btn_search"
            android:background="#eb7070" app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintStart_toEndOf="@+id/inputgname" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="103dp" app:layout_constraintBottom_toTopOf="@+id/textView17"
            android:layout_marginEnd="68dp"/>
    <TextView
            android:text="-------------------------------------"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView17"
            app:layout_constraintTop_toBottomOf="@+id/btn_search" android:layout_marginBottom="1dp"
            app:layout_constraintEnd_toEndOf="@+id/search_res" app:layout_constraintBottom_toTopOf="@+id/search_res"
            app:layout_constraintStart_toStartOf="@+id/inputgname"
            android:layout_marginStart="70dp" android:layout_marginEnd="70dp"/>
    <Button
            android:text="그룹 메인으로 돌아가기"
            android:layout_width="168dp"
            android:layout_height="46dp"
            android:id="@+id/button3" android:background="#eb7070"
            android:layout_marginBottom="132dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"/>
</androidx.constraintlayout.widget.ConstraintLayout>