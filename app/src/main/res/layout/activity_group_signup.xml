<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Group.JoinGroup.JoinGroup" android:background="#fff3b1">

    <EditText
            android:layout_width="190dp"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputgname"
            android:hint="검색어를 입력하세요" android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"
            android:layout_marginTop="116dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_search" android:layout_marginEnd="13dp"
    />
    <TextView
            android:text="그룹 가입"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" android:textStyle="bold"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="141dp" android:layout_marginBottom="59dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_search" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:id="@+id/search_res" android:textAlignment="center"
            android:textStyle="bold" android:textSize="24sp" android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" android:layout_marginEnd="56dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            android:layout_marginTop="20dp"/>
    <ImageButton
            android:layout_width="55dp"
            android:layout_height="40dp" app:srcCompat="@android:drawable/arrow_down_float"
            android:id="@+id/btn_search"
            android:background="#eb7070"
            android:layout_marginTop="301dp"
            app:layout_constraintStart_toEndOf="@+id/editText3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="41dp" app:layout_constraintBottom_toTopOf="@+id/textView12"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="75dp"
            app:layout_constraintVertical_chainStyle="spread_inside"/>
    <Button
            android:text="그룹 메인으로 돌아가기"
            android:layout_width="180dp"
            android:layout_height="55dp"
            android:id="@+id/button3" android:background="#eb7070"
            app:layout_constraintTop_toBottomOf="@+id/search_res" android:layout_marginBottom="108dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.559"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="하단의 이름을 눌러주세요!"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView12"
            app:layout_constraintStart_toStartOf="@+id/textView14"
            android:layout_marginStart="41dp" app:layout_constraintTop_toBottomOf="@+id/btn_search"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/textView14"/>
    <TextView
            android:text="가입하고 싶은 그룹명을 입력후 검색하세요"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/textView13" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.533" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/inputgname"/>
    <TextView
            android:text="--------------------------------------------------------"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView14"
            app:layout_constraintStart_toStartOf="@+id/search_res"
            android:layout_marginStart="32dp" app:layout_constraintTop_toBottomOf="@+id/textView12"
    />
</androidx.constraintlayout.widget.ConstraintLayout>