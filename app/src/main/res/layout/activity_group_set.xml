<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="#fff3b1"
                                                   tools:context=".MainActivity">

    <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginTop="141dp"
            android:text="그룹비용확인"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/btn_g_set_finish"
            android:layout_width="168dp"
            android:layout_height="30dp"
            android:layout_marginBottom="176dp"
            android:background="#eb7070"
            android:text="확인"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
    />

    <TextView
            android:id="@+id/gnm"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginTop="232dp"
            android:layout_marginBottom="269dp"
            android:text="그룹이름확인"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_g_set_finish"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="spread_inside" android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/textView12" android:layout_marginEnd="77dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/gbill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그룹 돈 "
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.611"/>
    <TextView
            android:text="그룹 이름:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12" android:textStyle="bold"
            android:textSize="24sp" app:layout_constraintEnd_toStartOf="@+id/gnm"
            app:layout_constraintTop_toTopOf="@+id/gnm" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="37dp" android:layout_marginEnd="12dp"
    />
    <TextView
            android:text="총 합산 금액: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18" android:textStyle="bold"
            android:textSize="24sp" app:layout_constraintBaseline_toBaselineOf="@+id/gbill"
            app:layout_constraintEnd_toStartOf="@+id/gbill" android:layout_marginEnd="11dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>