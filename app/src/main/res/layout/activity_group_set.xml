<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="#fff3b1"
                                                   tools:context=".MainActivity">

    <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginTop="92dp"
            android:text="그룹비용확인"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/gbill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그룹 비용은?"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.358"
            android:layout_marginBottom="264dp" android:background="#f1eb9a"/>

    <EditText
            android:id="@+id/ignm"
            android:layout_width="227dp"
            android:layout_height="57dp"
            android:ems="10"
            android:hint=" 그룹이름 입력하기"
            android:gravity="center"
            android:inputType="textPersonName"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintHorizontal_bias="0.496"
            android:textSize="20sp"/>

    <Button
            android:id="@+id/button"
            android:layout_width="121dp"
            android:layout_height="51dp"
            android:layout_marginBottom="144dp"
            android:text="검색"
            android:background="#eb7070"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="------------------------------------"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:id="@+id/textView15"
            app:layout_constraintTop_toBottomOf="@+id/ignm"
            android:layout_marginTop="12dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/gbill"/>
    <TextView
            android:text="그룹 이름 입력 후 확인을 눌러주세요!"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView16" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="45dp" app:layout_constraintBottom_toTopOf="@+id/ignm"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="원"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:id="@+id/textView18"
            android:textSize="30sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/gbill" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/gbill"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.133"/>

</androidx.constraintlayout.widget.ConstraintLayout>